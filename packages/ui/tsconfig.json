{
    "include":  [
                    "src"
                ],
    "exclude": [
        "src/**/*.test.tsx",
        "src/**/*.test.ts",
        "src/**/*.stories.tsx",
        "src/**/*.stories.ts"
    ],
    "compilerOptions":  {
                            "moduleResolution":  "bundler",
                            "esModuleInterop":  true,
                            "outDir":  "./dist",
                            "resolveJsonModule":  true,
                            "jsx":  "react-jsx",
                            "declaration":  true,
                            "strict":  false,
                            "target":  "ES2022",
                            "skipLibCheck":  true,
                            "noEmitOnError":  false,
                            "module":  "ESNext",
                            "rootDir":  "./src",
                            "lib":  [
                                        "ES2022",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "types":  [
                                          "react",
                                          "react-dom"
                                      ]
                        }
}
