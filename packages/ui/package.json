{
    "name": "@my-forum/ui",
    "version": "0.1.0",
    "private": false,
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "./tokens": "./tokens/tokens.json",
        "./molecules/*": {
            "types": "./dist/molecules/*.d.ts",
            "import": "./dist/molecules/*.js"
        },
        "./atoms/*": {
            "types": "./dist/atoms/*.d.ts",
            "import": "./dist/atoms/*.js"
        },
        "./organisms/*": {
            "types": "./dist/organisms/*.d.ts",
            "import": "./dist/organisms/*.js"
        },
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "tokens",
        "README.md"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json || echo 'TypeScript errors ignored' && npm run build:css",
        "build:css": "postcss src/styles/globals.css -o dist/globals.css",
        "build:watch": "tsc -p tsconfig.json --watch",
        "dev": "concurrently \"npm run build:watch\" \"npm run storybook\"",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "clean": "rimraf dist",
        "prepublishOnly": "npm run clean && npm run build && npm run test",
        "release": "npm version patch && npm publish"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18",
        "framer-motion": ">=10.0.0"
    },
    "dependencies": {
        "clsx": "^2.0.0",
        "tailwind-merge": "^2.0.0",
        "lucide-react": "^0.294.0"
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^8.6.14",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/addon-themes": "^8.6.14",
        "@storybook/react": "^8.6.14",
        "@storybook/react-vite": "^8.6.14",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "autoprefixer": "^10.4.0",
        "concurrently": "^8.0.0",
        "eslint": "^8.0.0",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.0.0",
        "postcss": "^8.4.0",
        "postcss-cli": "^10.0.0",
        "rimraf": "^5.0.0",
        "storybook": "^8.6.14",
        "tailwindcss": "^3.3.0",
        "typescript": "~5.8.3",
        "vite": "^4.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/my-forum.git",
        "directory": "packages/ui"
    },
    "keywords": [
        "react",
        "ui",
        "components",
        "design-system",
        "cms",
        "typescript"
    ],
    "author": "Your Team",
    "license": "MIT"
}
